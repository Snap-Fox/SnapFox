{
    "manifest_version": 3,
    "name": "SnapFox",
    "version": "2.0.0",
    "description": "SnapFox expands the functionality of Snap!",
    "author": "Daniel4-Scratch",
    "permissions": [
        "scripting",
        "storage"
    ],
    "action": {
        "browser_style": true,
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        },
        "default_title": "SnapFox",
        "default_popup": "popup/index.html"
    },
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "web_accessible_resources": [{
        "resources": ["/features/*"],
        "matches": ["https://snap.berkeley.edu/*"]
      }],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["https://snap.berkeley.edu/"]
}